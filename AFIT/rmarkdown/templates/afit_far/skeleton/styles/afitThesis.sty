         \if@mainmatter
            \refstepcounter{chapter}
            \typeout{\@chapapp\space\thechapter.}
            \addtocontents{toc}{\protect\addvspace{10\p@}}
            \ifx\@chapapp\appflag
                \addcontentsline{toc}{appendix}{\protect\numberline{Appendix \thechapter.}#1}
            \else

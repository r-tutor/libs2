    {\parindent 0pt
     \begin{center}
	\singlespace
     \ifx\@chapapp\appflag
	\large {\bfseries \@chapapp\ \thechapter.\ \ #1}
	\else
	\ifnum\value{chapter}=1
	  \vspace*{2 pc}
	  \doublespacing
	  \MakeUppercase{\Large{{\mytitle}}}\\
	  \vspace*{1 pc}
	\fi
	\large{\bfseries \thechapter.\ \ #1}
	\vspace*{1 pc}
       \fi
     \end{center}
    }
  }%
